<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/fragment_splash">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.hello.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_form_task"
            app:destination="@id/formTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/formTaskFragment"
        android:name="com.example.hello.FormTaskFragment"
        android:label="FormTaskFragment"
        tools:layout="@layout/fragment_form_task">
        <argument
            android:name="taskId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.hello.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/fragment_register" />
        <action
            android:id="@+id/action_login_to_recover_account"
            app:destination="@id/fragment_recover_account" />
    </fragment>

    <fragment
        android:id="@+id/fragment_recover_account"
        android:name="com.example.hello.RecoverAccountFragment"
        android:label="fragment_recover_account"
        tools:layout="@layout/fragment_recover_account">
        <action
            android:id="@+id/action_recover_account_to_login"
            app:destination="@id/fragment_login"
            app:popUpTo="@id/fragment_login"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_register"
        android:name="com.example.hello.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/fragment_login"
            app:popUpTo="@id/fragment_login"
            app:popUpToInclusive="true"      />
    </fragment>

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.example.hello.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_fragment_splash_to_fragment_login"
            app:destination="@id/fragment_login" />
    </fragment>

</navigation>
