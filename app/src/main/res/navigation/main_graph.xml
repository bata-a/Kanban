<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.mrt.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mrt.ui.login.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_login_to_recover"
            app:destination="@id/recoverAccountFragment" />

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
    </fragment>


    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mrt.ui.register.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/recoverAccountFragment"
        android:name="com.example.mrt.ui.recover.RecoverAccountFragment"
        android:label="Recover Account" />


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mrt.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_formTask"
            app:destination="@id/formTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/formTaskFragment"
        android:name="com.example.mrt.ui.formtask.FormTaskFragment"
        android:label="Form Task" />


    <fragment
        android:id="@+id/todoFragment"
        android:name="com.example.mrt.ui.todo.TodoFragment"
        android:label="Todo" />


    <fragment
        android:id="@+id/doingFragment"
        android:name="com.example.mrt.ui.doing.DoingFragment"
        android:label="Doing" />


    <fragment
        android:id="@+id/doneFragment"
        android:name="com.example.mrt.ui.done.DoneFragment"
        android:label="Done" />

</navigation>
